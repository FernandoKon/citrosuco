<mvc:View controllerName="com.lab2dev.citrosuco.controller.Home"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns:l="sap.ui.layout"
    xmlns:t="sap.ui.table"
    xmlns:core="sap.ui.core"
    xmlns:smartFilterBar="sap.ui.comp.smartfilterbar"
	xmlns:smartTable="sap.ui.comp.smarttable"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}" showHeader="false">
        
        <content>
            <Panel class="sapUiSmallMarginBottom">
                <smartFilterBar:SmartFilterBar id="smartFilterBar" entitySet="CaixasContratadas" >
                        <smartFilterBar:controlConfiguration>
                            <smartFilterBar:ControlConfiguration key="PROPOSTA" visibleInAdvancedArea="true"/>
                            <smartFilterBar:ControlConfiguration key="CONTRATO" visibleInAdvancedArea="true"/>
                            <smartFilterBar:ControlConfiguration key="MOEDA" visibleInAdvancedArea="true"/>
                            <smartFilterBar:ControlConfiguration key="FORNECEDOR" visibleInAdvancedArea="true"/>
                            <smartFilterBar:ControlConfiguration key="SAFRA" visibleInAdvancedArea="true"/>
                            <smartFilterBar:ControlConfiguration key="NOME_REGIAO" visibleInAdvancedArea="true"/>
                            <smartFilterBar:ControlConfiguration key="COMPRADOR" visibleInAdvancedArea="true"/>
                            <smartFilterBar:ControlConfiguration key="COMENTARIO1" visibleInAdvancedArea="true"/>
                        </smartFilterBar:controlConfiguration>
                        <smartFilterBar:layoutData>
                            <FlexItemData shrinkFactor="0"/>
                        </smartFilterBar:layoutData>
                    </smartFilterBar:SmartFilterBar>
            </Panel>
            <smartTable:SmartTable 
            id="SmartTable" 
            entitySet="CaixasContratadas" 
            smartFilterId="smartFilterBar" 
            useExportToExcel="true" 
            beforeExport="onBeforeExport"
            useTablePersonalisation="true" 
            header="Caixas Contratadas" 
            showRowCount="true" 
            noData="Para comeÃ§ar, defina os filtros relevantes."
            tableType="ResponsiveTable"
            enableAutoBinding="false" 
            class="sapUiResponsiveContentPadding" 
            initiallyVisibleFields="PROPOSTA,SAFRA,CONTRATO,IMOVEL,VARIEDADE"
            wrap="NoWrap"
            >
                <smartTable:layoutData>
                    <FlexItemData growFactor="2" baseSize="0%"/>
                </smartTable:layoutData>
                <Table id="oTable" selectionChange="handleSelectionChange" noDataText="Inicie ou verifique os filtros para exibir os dadaos."
                mode="SingleSelectMaster"/>
            </smartTable:SmartTable>
        </content>

    </Page>
</mvc:View>

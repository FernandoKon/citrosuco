<mvc:View controllerName="com.lab2dev.citrosuco.controller.Params"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns:l="sap.ui.layout"
    xmlns:table="sap.ui.table"
    xmlns:dnd="sap.ui.core.dnd"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    height="100%">
    <Page id="page" title="{i18n>title}" showHeader="false"> 
        
        <FlexBox class="sapUiSmallMargin" justifyContent="SpaceBetween" fitContainer="true" >
            <Panel class="sapUiSmallMargin customBorder sapUiNoContentPadding">
                <VBox backgroundDesign="Transparent">
                    <table:Table
                        class="sapUiTinyMarginTopBottom"
                        id="credit"
                        rows="{credit>/}"
                        enableColumnReordering="false"
                        rowMode="Interactive"
                    >
                        <table:extension>
                            <OverflowToolbar height="3rem">
                                <Title
                                    class="sapUiTinyMargin"
                                    text="Parâmetros de Crédito"
                                />
                                <ToolbarSpacer />
                                <Button 
                                    id="addButton" 
                                    icon="sap-icon://add"
                                    type="Transparent"
                                    press="onOpenAddDialog('credit')" />
                                <Button 
                                    id="editButton" 
                                    text="Editar" 
                                    type="Transparent"
                                    press="onEdit('credit')" 
                                    visible="{= !${viewDetailC>/bEnableEditParam}}"/>
                                <Button 
                                    id="saveButton" 
                                    text="Salvar" 
                                    type="Accept"
                                    press="onSave('credit')" 
                                    visible="{viewDetailC>/bEnableEditParam}" />
                                <Button 
                                    id="cancelButton" 
                                    text="Cancelar" 
                                    type="Reject"
                                    press="onCancel('credit')" 
                                    visible="{viewDetailC>/bEnableEditParam}" />
                                <Button 
                                    text="Deletar" 
                                    press="onDelete('credit')" 
                                    type="Emphasized" />
                            </OverflowToolbar>
                        </table:extension>

                        <table:dragDropConfig>
                            <dnd:DragDropInfo sourceAggregation="rows"/>
                            <dnd:DropInfo dropPosition="Between" targetAggregation="rows" drop="onDropPriority($event,'credit')"/>
                        </table:dragDropConfig>

                        <table:columns>
                            <table:Column resizable="false">
                                <Label
                                    design="Bold"
                                    text="DE"
                                />
                                <table:template> 
                                            <VBox>
                                                <Text text="{credit>Fillter}" visible="{= !${credit>bEditable}}"/>
                                                <Input id="inputFrom" value="{credit>Fillter}" visible="{credit>bEditable}"/>
                                            </VBox>
                                </table:template>
                            </table:Column>
                            <table:Column resizable="false">
                                <Label
                                    design="Bold"
                                    text="PARA"
                                />
                                <table:template>
                                    <VBox>
                                        <Text text="{credit>Text}" visible="{= !${credit>bEditable}}"/>
                                        <Input id="inputTo" value="{credit>Text}" visible="{credit>bEditable}"/>
                                    </VBox>
                                </table:template>
                            </table:Column>
                        </table:columns>
                    </table:Table>
                </VBox>
            </Panel>

            <Panel class="sapUiSmallMargin customBorder sapUiNoContentPadding"> 
                <VBox class="customBorder" backgroundDesign="Transparent">
                <table:Table
                    class="sapUiTinyMarginTopBottom"
                    id="debit"
                    rows="{debit>/}"
                    enableColumnReordering="false"
                    rowMode="Interactive"
                >
                    <table:extension>
                        <OverflowToolbar height="3rem">
                            <Title
                                class="sapUiTinyMargin"
                                text="Parâmetros de Débito"
                            />
                            <ToolbarSpacer />
                            <Button 
                                id="addButtonDebit" 
                                icon="sap-icon://add"
                                type="Transparent"
                                press="onOpenAddDialog('debit')" />
                            <Button 
                                id="editButtonDebit" 
                                text="Editar" 
                                type="Transparent"
                                press="onEdit('debit')" 
                                visible="{= !${viewDetailD>/bEnableEditParam}}"/>
                            <Button 
                                id="saveButtonDebit" 
                                text="Salvar" 
                                type="Accept"
                                press="onSave('debit')" 
                                visible="{viewDetailD>/bEnableEditParam}" />
                            <Button 
                                id="cancelButtonDebit" 
                                text="Cancelar" 
                                type="Reject"
                                press="onCancel('debit')" 
                                visible="{viewDetailD>/bEnableEditParam}" />
                            <Button 
                                text="Deletar" 
                                press="onDelete('debit')" 
                                type="Emphasized" />
                        </OverflowToolbar>
                    </table:extension>

                    <table:dragDropConfig>
                        <dnd:DragDropInfo sourceAggregation="rows"/>
                        <dnd:DropInfo dropPosition="Between" targetAggregation="rows" drop="onDropPriority($event,'debit')"/>
                    </table:dragDropConfig>

                    <table:columns>
                        <table:Column resizable="false">
                            <Label
                                design="Bold"
                                text="DE"
                            />
                            <table:template> 
                                        <VBox>
                                            <Text text="{debit>Fillter}" visible="{= !${debit>bEditable}}"/>
                                            <Input id="inputFromdDebit" value="{debit>Fillter}" visible="{debit>bEditable}"/>
                                        </VBox>
                            </table:template>
                        </table:Column>
                        <table:Column resizable="false">
                            <Label
                                design="Bold"
                                text="PARA"
                            />
                            <table:template>
                                <VBox>
                                    <Text text="{debit>Text}" visible="{= !${debit>bEditable}}"/>
                                    <Input id="inputToDebit" value="{debit>Text}" visible="{debit>bEditable}"/>
                                </VBox>
                            </table:template>
                        </table:Column>
                    </table:columns>
                </table:Table>
                </VBox>
            </Panel>
        </FlexBox>

    </Page>
</mvc:View>

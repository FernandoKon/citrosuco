<mvc:View controllerName="com.lab2dev.citrosuco.controller.Partners"
xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns:l="sap.ui.layout"
    xmlns:t="sap.ui.table"
    xmlns:core="sap.ui.core"
    xmlns:smartFilterBar="sap.ui.comp.smartfilterbar"
	xmlns:smartTable="sap.ui.comp.smarttable"
    xmlns="sap.m"
    height="100%">
    <Page id="Partners" title="{i18n>title}" showHeader="false">
        
            <smartFilterBar:SmartFilterBar id="smartFilterBar" entitySet="Socios" class="customBorder sapUiSmallMargin" showFilterConfiguration="false" showRestoreOnFB="true">
                <smartFilterBar:controlConfiguration>
                    <smartFilterBar:ControlConfiguration label="Nº do fornecedor" key="FORNECEDOR" visibleInAdvancedArea="true"/>
                    <smartFilterBar:ControlConfiguration label="Nome do fornecedor" key="NOME_FORNECEDOR" visibleInAdvancedArea="true"/>
                    <smartFilterBar:ControlConfiguration label="Nome do sócio" key="NOME_SOCIO" visibleInAdvancedArea="true"/>
                    <smartFilterBar:ControlConfiguration label="Nº do sócio" key="COD_SOCIO" visibleInAdvancedArea="true"/>
                    <smartFilterBar:ControlConfiguration label="CPF" key="CPF" visibleInAdvancedArea="true"/>
                </smartFilterBar:controlConfiguration>
                <smartFilterBar:layoutData>
                    <FlexItemData shrinkFactor="0"/>
                </smartFilterBar:layoutData>
            </smartFilterBar:SmartFilterBar>
      
            <smartTable:SmartTable 
                backgroundDesign="Translucent"
                id="SmartTable" 
                entitySet="Socios" 
                smartFilterId="smartFilterBar" 
                header="Sócios" 
                noData="Para começar, defina os filtros relevantes."
                tableType="ResponsiveTable"
                alignContent="Center"
                class="sapUiResponsiveContentPadding sapUiSmallMarginBeginEnd" 
                initiallyVisibleFields="FORNECEDOR,NOME_FORNECEDOR,COD_SOCIO,NOME_SOCIO,FUNC_PARCEIRO,DESC_FUNC_PARC,CPF,RG"
                >
                <smartTable:layoutData>
                    <FlexItemData growFactor="2" baseSize="0%"/>
                </smartTable:layoutData>
                <Table id="oTable" selectionChange="handleSelectionChange" noDataText="Inicie ou verifique os filtros para exibir os dadaos."
                mode="SingleSelectMaster"/>
            </smartTable:SmartTable>

    </Page>
</mvc:View>

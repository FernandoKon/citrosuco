<core:FragmentDefinition xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:table="sap.ui.table"
    xmlns:dnd="sap.ui.core.dnd"
    xmlns:core="sap.ui.core" height="100%">
    <Dialog id="Dialog"  showHeader="false" contentWidth="500px" class="sapUiResponsivePadding">

        <content>
            <table:Table
                class="sapUiTinyMarginTopBottom"
                id="ParameterTable"
                rows="{params>/}"
                enableColumnReordering="false"
                rowMode="Auto"
            >
                <table:extension>
                    <OverflowToolbar height="3rem">
                        <Title
                            class="sapUiTinyMargin"
                            text="Tabela de ParÃ¢metros"
                        />
                        <ToolbarSpacer />
                        <Button 
                            id="addButton" 
                            icon="sap-icon://add"
                            type="Transparent"
							press="onOpenAddDialog" />
                        <Button 
                            id="editButton" 
                            text="Editar" 
                            type="Transparent"
							press="onEdit" 
                            visible="{= !${viewDetail>/bEnableEditParam}}"/>
						<Button 
                            id="saveButton" 
                            text="Salvar" 
                            type="Accept"
							press="onSave" 
                            visible="{viewDetail>/bEnableEditParam}" />
						<Button 
                            id="cancelButton" 
                            text="Cancelar" 
                            type="Reject"
							press="onCancel" 
                            visible="{viewDetail>/bEnableEditParam}" />
                    </OverflowToolbar>
                </table:extension>

                <table:dragDropConfig>
                    <dnd:DragInfo groupName="priority" sourceAggregation="items"/>
                    <dnd:DropInfo groupName="priority" dropPosition="Between" targetAggregation="items" drop="onDropPriority"/>
                </table:dragDropConfig>

                <table:columns>
                    <table:Column resizable="false" width="2rem">
                        <table:template> 
                            <Text text="{params>Priority}"/>
                        </table:template>
                    </table:Column>
                    <table:Column resizable="false">
                        <Label
                            design="Bold"
                            text="DE"
                        />
                        <table:template> 
                                    <VBox>
                                        <Text text="{params>Fillter}" visible="{= !${params>bEditable}}"/>
                                        <Input id="inputFrom" value="{params>Fillter}" visible="{params>bEditable}"/>
                                    </VBox>
                        </table:template>
                    </table:Column>
                    <table:Column resizable="false">
                        <Label
                            design="Bold"
                            text="PARA"
                        />
                        <table:template>
                            <VBox>
                                <Text text="{params>Text}" visible="{= !${params>bEditable}}"/>
                                <Input id="inputTo" value="{params>Text}" visible="{params>bEditable}"/>
                            </VBox>
                        </table:template>
                    </table:Column>
                </table:columns>
            </table:Table>
        </content>


        <Toolbar style="Clear" class="sapUiTinyMarginEnd sapUiTinyMarginBottom">
            <content>
                <ToolbarSpacer />
                <Button text="Deletar" press="onDelete" type="Reject" />
                <Button text="Fechar" press="onCloseDialog" type="Ghost" />
            </content>
        </Toolbar>

    </Dialog>
</core:FragmentDefinition>
<mvc:View
    controllerName="com.lab2dev.citrosuco.controller.HomeDetail"
	height="100%"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:f="sap.f"
    xmlns:layout="sap.ui.layout"
    xmlns="sap.m"
    xmlns:smartFilterBar="sap.ui.comp.smartfilterbar"
	xmlns:smartTable="sap.ui.comp.smarttable"
    xmlns:smartForm="sap.ui.comp.smartform"
	xmlns:smartField="sap.ui.comp.smartfield"
    xmlns:ff="sap.ui.layout.form"   
    xmlns:core="sap.ui.core"
    xmlns:main="sap.ui.webc.main">
	<Page id="DetailPage" showHeader="false">

        <smartForm:SmartForm id="smartForm" title="Caixa Contratada {teste>/id}">
            <smartForm:customToolbar>
                <Toolbar>
                    <ToolbarSpacer/>
                    <Button type="Transparent" icon="sap-icon://undo" press="navBack"/>
                </Toolbar>
            </smartForm:customToolbar>
            <smartForm:Group>
                <smartForm:GroupElement>
                    <smartField:SmartField textLabel="PROPOSTA" value="{/PROPOSTA}"/>
                </smartForm:GroupElement>
                <smartForm:GroupElement>
                    <smartField:SmartField textLabel="CONTRATO" value="{/CONTRATO}"/>
                </smartForm:GroupElement>
            </smartForm:Group>
        </smartForm:SmartForm>
        
        <content>
            <VBox class="sapUiSmallMarginTop">
                <smartFilterBar:SmartFilterBar id="smartFilterBar" entitySet="Socios" class="customBorder" visible="true">
                    <smartFilterBar:ControlConfiguration key="FORNECEDOR"  visibleInAdvancedArea="true">
                        <smartFilterBar:defaultFilterValues>
                            <smartFilterBar:SelectOption id="smartFilterData"/>
                        </smartFilterBar:defaultFilterValues>
                    </smartFilterBar:ControlConfiguration>
                    <smartFilterBar:layoutData>
                        <FlexItemData shrinkFactor="0"/>
                    </smartFilterBar:layoutData>
                </smartFilterBar:SmartFilterBar>

                <smartTable:SmartTable 
                    backgroundDesign="Translucent"
                    id="SmartTable" 
                    entitySet="Socios" 
                    smartFilterId="smartFilterBar" 
                    header="Sócios com o fornecedor {teste>/cod}" 
                    noData="Para começar, defina os filtros relevantes."
                    tableType="ResponsiveTable"
                    alignContent="Center"
                    class="sapUiResponsiveContentPadding" 
                    initiallyVisibleFields="FORNECEDOR,NOME_FORNECEDOR,COD_SOCIO,NOME_SOCIO,FUNC_PARCEIRO,DESC_FUNC_PARC,CPF,RG"
                    >
                    <smartTable:layoutData>
                        <FlexItemData growFactor="2" baseSize="0%"/>
                    </smartTable:layoutData>
                    <Table id="oTable" selectionChange="handleSelectionChange" noDataText="Inicie ou verifique os filtros para exibir os dadaos."
                    mode="SingleSelectMaster"/>
                </smartTable:SmartTable>
            </VBox>
        </content>

    </Page>
</mvc:View>
<mvc:View
    controllerName="com.lab2dev.citrosuco.controller.HomeDetail"
	height="100%"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:f="sap.f"
    xmlns:layout="sap.ui.layout"
    xmlns="sap.m"
    xmlns:smartFilterBar="sap.ui.comp.smartfilterbar"
	xmlns:smartTable="sap.ui.comp.smarttable"
    xmlns:smartForm="sap.ui.comp.smartform"
	xmlns:smartField="sap.ui.comp.smartfield"
    xmlns:ff="sap.ui.layout.form"   
    xmlns:core="sap.ui.core"
    xmlns:main="sap.ui.webc.main">
	<Page id="DetailPage" showHeader="false">

        <smartForm:SmartForm id="smartForm" title="Caixa Contratada" expandable="true" expanded="true" class="sapUiSmallMargin">
            <smartForm:customToolbar>
                <Toolbar style="Clear">
                    <ToolbarSpacer/>
                    <Button type="Transparent" icon="sap-icon://undo" press="onNavBack('RouteHome')"/>
                </Toolbar>
            </smartForm:customToolbar>
            <smartForm:Group>
                <smartForm:GroupElement>
                    <smartField:SmartField textLabel="Proposta" value="{Proposta}"/>
                </smartForm:GroupElement>
                <smartForm:GroupElement>
                    <smartField:SmartField textLabel="Contrato" value="{Contrato}"/>
                </smartForm:GroupElement>
                <smartForm:GroupElement>
                    <smartField:SmartField textLabel="Fornecedor" value="{Fornecedor}"/>
                </smartForm:GroupElement>
                <smartForm:GroupElement>
                    <smartField:SmartField textLabel="Nome do fornecedor" value="{NomeForn}"/>
                </smartForm:GroupElement>
                <smartForm:GroupElement>
                    <smartField:SmartField textLabel="Safra" value="{Safra}"/>
                </smartForm:GroupElement>
                <smartForm:GroupElement>
                    <smartField:SmartField textLabel="Caixas contratadas" value="{CaixasContratadas}"/>
                </smartForm:GroupElement>
                <smartForm:GroupElement>
                    <smartField:SmartField textLabel="Criado em" value="{DataCriacao}"/>
                </smartForm:GroupElement>
                <smartForm:GroupElement>
                    <smartField:SmartField textLabel="Criado por" value="{createdBy}"/>
                </smartForm:GroupElement>
                <smartForm:GroupElement>
                    <smartField:SmartField textLabel="Modificado em" value="{modifiedAt}"/>
                </smartForm:GroupElement>
                <smartForm:GroupElement>
                    <smartField:SmartField textLabel="Modificado por" value="{modifiedBy}"/>
                </smartForm:GroupElement>
                <smartForm:GroupElement>
                    <smartField:SmartField textLabel="Imóvel" value="{Imovel}"/>
                </smartForm:GroupElement>
                <smartForm:GroupElement>
                    <smartField:SmartField textLabel="Nome do imóvel" value="{NomeImovel}"/>
                </smartForm:GroupElement>
                <smartForm:GroupElement>
                    <smartField:SmartField textLabel="Variedade" value="{Variedade}"/>
                </smartForm:GroupElement>
                <smartForm:GroupElement>
                    <smartField:SmartField textLabel="Nome da variedade" value="{NomeVariedade}"/>
                </smartForm:GroupElement>
                <smartForm:GroupElement>
                    <smartField:SmartField textLabel="Comprador" value="{Comprador}"/>
                </smartForm:GroupElement>
                <smartForm:GroupElement>
                    <smartField:SmartField textLabel="Caixas estimadas" value="{CxsEstimdas}"/>
                </smartForm:GroupElement>
                <smartForm:GroupElement>
                    <smartField:SmartField textLabel="Caixas entregues" value="{CxsEntregues}"/>
                </smartForm:GroupElement>
                <smartForm:GroupElement>
                    <smartField:SmartField textLabel="Caixas recebidas anteriormente" value="{CxsRecebAnt}"/>
                </smartForm:GroupElement>
            </smartForm:Group>
            <smartForm:Group>
                <smartForm:GroupElement>
                    <smartField:SmartField textLabel="Preço base" value="{PrecoBase}"/>
                </smartForm:GroupElement>
                <smartForm:GroupElement>
                    <smartField:SmartField textLabel="Moeda" value="{Moeda}"/>
                </smartForm:GroupElement>
                <smartForm:GroupElement>
                    <smartField:SmartField textLabel="Grupo" value="{Grupo}"/>
                </smartForm:GroupElement>
                <smartForm:GroupElement>
                    <smartField:SmartField textLabel="Nome do grupo" value="{NomeGrupo}"/>
                </smartForm:GroupElement>
                <smartForm:GroupElement>
                    <smartField:SmartField textLabel="MOD_CONTRATO" value="{ModContrato}"/>
                </smartForm:GroupElement>
                <smartForm:GroupElement>
                    <smartField:SmartField textLabel="Região" value="{CodRegiao}"/>
                </smartForm:GroupElement>
                <smartForm:GroupElement>
                    <smartField:SmartField textLabel="Nome da região" value="{NomeRegiao}"/>
                </smartForm:GroupElement>
                <smartForm:GroupElement>
                    <smartField:SmartField textLabel="Cidade do imóvel" value="{CidadeImovel}"/>
                </smartForm:GroupElement>
                <smartForm:GroupElement>
                    <smartField:SmartField textLabel="Estado do imóvel" value="{EstadoImovel}"/>
                </smartForm:GroupElement>
                <smartForm:GroupElement>
                    <smartField:SmartField textLabel="MOD_COMPRA" value="{ModCompra}"/>
                </smartForm:GroupElement>
                <smartForm:GroupElement>
                    <smartField:SmartField textLabel="ADTO_FLUXO" value="{AdtoFluxo}"/>
                </smartForm:GroupElement>
                <smartForm:GroupElement>
                    <smartField:SmartField textLabel="RECEBEDOR" value="{Recebedor}"/>
                </smartForm:GroupElement>
                <smartForm:GroupElement>
                    <smartField:SmartField textLabel="ID_DADOS_BANCARIOS" value="{IdDadosBancarios}"/>
                </smartForm:GroupElement>
                <smartForm:GroupElement>
                    <smartField:SmartField textLabel="CONTA_BANCARIA" value="{ContaBancaria}"/>
                </smartForm:GroupElement>
                <smartForm:GroupElement>
                    <smartField:SmartField textLabel="BANCO_AGENCIA" value="{BancoAgencia}"/>
                </smartForm:GroupElement>
                <smartForm:GroupElement>
                    <smartField:SmartField textLabel="DIG_CONTA_BANCARIA" value="{DigContaBancaria}"/>
                </smartForm:GroupElement>
                <smartForm:GroupElement>
                    <smartField:SmartField textLabel="NOME_TP_TRANSF" value="{NomeTpTransf}"/>
                </smartForm:GroupElement>
            </smartForm:Group>
            <smartForm:Group>
                <smartForm:GroupElement>
                    <smartField:SmartField textLabel="DATA_CRIACAO" value="{DataCriacao}"/>
                </smartForm:GroupElement>
                <smartForm:GroupElement>
                    <smartField:SmartField textLabel="TIPO_CONTRATO" value="{TipoContrato}"/>
                </smartForm:GroupElement>
                <smartForm:GroupElement>
                    <smartField:SmartField textLabel="COMENTARIO1" value="{Comentario1}"/>
                </smartForm:GroupElement>
                <smartForm:GroupElement>
                    <smartField:SmartField textLabel="COMENTARIO2" value="{Comentario2}"/>
                </smartForm:GroupElement>
                <smartForm:GroupElement>
                    <smartField:SmartField textLabel="COMENTARIO3" value="{Comentario3}"/>
                </smartForm:GroupElement>
                <smartForm:GroupElement>
                    <smartField:SmartField textLabel="CONSOL_SALDO" value="{ConsolSaldo}"/>
                </smartForm:GroupElement>
                <smartForm:GroupElement>
                    <smartField:SmartField textLabel="COMPL_FRETE" value="{ComplFrete}"/>
                </smartForm:GroupElement>
                <smartForm:GroupElement>
                    <smartField:SmartField textLabel="REEMB_ICMS" value="{ReembIcms}"/>
                </smartForm:GroupElement>
                <smartForm:GroupElement>
                    <smartField:SmartField textLabel="ERDAT_PRINT" value="{ErdatPrint}"/>
                </smartForm:GroupElement>
                <smartForm:GroupElement>
                    <smartField:SmartField textLabel="ERZET_PRINT" value="{ErzetPrint}"/>
                </smartForm:GroupElement>
                <smartForm:GroupElement>
                    <smartField:SmartField textLabel="DATA_LIMITE" value="{DataLimite}"/>
                </smartForm:GroupElement>
                <smartForm:GroupElement>
                    <smartField:SmartField textLabel="RET_FUNDECITROS" value="{RetFundecitros}"/>
                </smartForm:GroupElement>
                <smartForm:GroupElement>
                    <smartField:SmartField textLabel="PERC_REFUGO" value="{PercRefugo}"/>
                </smartForm:GroupElement>
                <smartForm:GroupElement>
                    <smartField:SmartField textLabel="TP_PERC_REF" value="{TpPercRef}"/>
                </smartForm:GroupElement>
                <smartForm:GroupElement>
                    <smartField:SmartField textLabel="TIPO_FORN" value="{TipoForn}"/>
                </smartForm:GroupElement>
                <smartForm:GroupElement>
                    <smartField:SmartField textLabel="NOME_TP_FORN" value="{NomeTpForn}"/>
                </smartForm:GroupElement>
                <smartForm:GroupElement>
                    <smartField:SmartField textLabel="PROP_ANTIGA" value="{PropAntiga}"/>
                </smartForm:GroupElement>
                <smartForm:GroupElement>
                    <smartField:SmartField textLabel="TP_TRANSF" value="{TpTransf}"/>
                </smartForm:GroupElement>
            </smartForm:Group>
        </smartForm:SmartForm>
        
        <VBox class="sapUiSmallMarginTop" fitContainer="true">
            <smartFilterBar:SmartFilterBar id="smartFilterBar" entitySet="SociosGet" class="customBorder" visible="false">
                <smartFilterBar:controlConfiguration>
                    <smartFilterBar:ControlConfiguration key="Fornecedor"  visibleInAdvancedArea="true">
                        <smartFilterBar:defaultFilterValues>
                            <smartFilterBar:SelectOption id="smartFilterData" low="{oModel>/supplier}"/>
                        </smartFilterBar:defaultFilterValues>
                    </smartFilterBar:ControlConfiguration>
                </smartFilterBar:controlConfiguration>    
                <smartFilterBar:layoutData>
                    <FlexItemData shrinkFactor="0"/>
                </smartFilterBar:layoutData>
            </smartFilterBar:SmartFilterBar>

            <smartTable:SmartTable 
                backgroundDesign="Translucent"
                id="SmartTable" 
                entitySet="SociosGet" 
                smartFilterId="smartFilterBar" 
                header="Sócios com o fornecedor {oModel>/supplier}" 
                noData="Para começar, defina os filtros relevantes."
                tableType="Table"
                enableAutoBinding="true"
                initialise="onSmartTableInit($event, 'Table')"
                alignContent="Center"
                class="sapUiResponsiveContentPadding" 
                initiallyVisibleFields="Fornecedor,NomeFornecedor,CodSocio,NomeSocio,FuncParceiro,DescFuncParc,Cpf,Rg"
                >
                <smartTable:layoutData>
                    <FlexItemData growFactor="2" baseSize="0%"/>
                </smartTable:layoutData>
            </smartTable:SmartTable>
        </VBox>

    </Page>
</mvc:View>
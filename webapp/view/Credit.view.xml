<mvc:View controllerName="com.lab2dev.citrosuco.controller.Credit"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns:l="sap.ui.layout"
    xmlns:t="sap.ui.table"
    xmlns:core="sap.ui.core"
    xmlns:smartFilterBar="sap.ui.comp.smartfilterbar"
	xmlns:smartTable="sap.ui.comp.smarttable"
    xmlns="sap.m"
    height="100%">
    <Page id="page" title="{i18n>title}" showHeader="false"> 
        
        <smartFilterBar:SmartFilterBar id="smartFilterBar" entitySet="CaixasContratadas" class="customBorder sapUiSmallMargin" header="Opções de filtragem">
            <smartFilterBar:controlConfiguration>
                <smartFilterBar:ControlConfiguration key="PROPOSTA" visibleInAdvancedArea="true" mandatory="mandatory"/>
                <smartFilterBar:ControlConfiguration key="CONTRATO" visibleInAdvancedArea="true"/>
                <smartFilterBar:ControlConfiguration key="MOEDA" visibleInAdvancedArea="true"/>
                <smartFilterBar:ControlConfiguration key="FORNECEDOR" visibleInAdvancedArea="true"/>
            </smartFilterBar:controlConfiguration>
            <smartFilterBar:layoutData>
                <FlexItemData shrinkFactor="0"/>
            </smartFilterBar:layoutData>
        </smartFilterBar:SmartFilterBar>

        <Button text="Parametros" press="onOpenDialog" class="sapUiSmallMarginBegin sapUiSmallMarginBottom"/>

        <smartTable:SmartTable 
            backgroundDesign="Solid"
            id="SmartTable"
            entitySet="CaixasContratadas"
            smartFilterId="smartFilterBar" 
            header="Caixas Contratadas" 
            noData="Para começar, defina os filtros relevantes."
            tableType="ResponsiveTable"
            alignContent="Center"
            class="sapUiResponsiveContentPadding sapUiSmallMarginBeginEnd" 
            initiallyVisibleFields="PROPOSTA,SAFRA,CONTRATO,MOEDA,FORNECEDOR,NOME_FORN,VARIEDADE,TIPO_FORN"
            >
            <smartTable:layoutData>
                <FlexItemData growFactor="2" baseSize="0%"/>
            </smartTable:layoutData>
            <Table id="oTable" noDataText="Inicie ou verifique os filtros para exibir os dados."
            mode="SingleSelectMaster">
                <columns>
                    <Column width="auto">
                        <Text text="TIPO DE CRÉDITO"/>
                    </Column>
                </columns>

                <items >
                    <ColumnListItem vAlign="Middle">
                        <cells>
                            <Text id="creditType" class="textBold" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </smartTable:SmartTable>

    </Page>
</mvc:View>

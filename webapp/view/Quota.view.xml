<mvc:View controllerName="com.lab2dev.citrosuco.controller.Home"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns:l="sap.ui.layout"
    xmlns:t="sap.ui.table"
    xmlns:core="sap.ui.core"
    xmlns:smartFilterBar="sap.ui.comp.smartfilterbar"
	xmlns:smartTable="sap.ui.comp.smarttable"
    xmlns="sap.m"
    height="100%">
    <Page id="page" title="{i18n>title}" showHeader="false"> 
        
            <smartFilterBar:SmartFilterBar id="smartFilterBar" entitySet="Cotas" class="customBorder sapUiSmallMargin" showFilterConfiguration="false">
                <smartFilterBar:controlConfiguration>
                    <smartFilterBar:ControlConfiguration label="Data" key="DT_PROGRAMACAO" visibleInAdvancedArea="true"/>
                    <smartFilterBar:ControlConfiguration label="Semana" key="SEMANA" visibleInAdvancedArea="true"/>
                    <smartFilterBar:ControlConfiguration label="Centro" key="CENTRO" visibleInAdvancedArea="true"/>
                    <smartFilterBar:ControlConfiguration label="Nº do fornecedor" key="FORNECEDOR" visibleInAdvancedArea="true"/>
                    <smartFilterBar:ControlConfiguration label="Nome do fornecedor" key="NOME_FORN" visibleInAdvancedArea="true"/>
                    <smartFilterBar:ControlConfiguration label="Nº do imóvel" key="IMOVEL" visibleInAdvancedArea="true"/>
                    <smartFilterBar:ControlConfiguration label="Nome do imóvel" key="NOME_IMOVEL" visibleInAdvancedArea="true"/>
                </smartFilterBar:controlConfiguration>
                <smartFilterBar:layoutData>
                    <FlexItemData shrinkFactor="0"/>
                </smartFilterBar:layoutData>
            </smartFilterBar:SmartFilterBar>

            <smartTable:SmartTable 
                backgroundDesign="Translucent"
                id="SmartTable" 
                entitySet="Cotas" 
                smartFilterId="smartFilterBar" 
                enableExport="true" 
                beforeExport="onBeforeExport"
                useTablePersonalisation="true" 
                header="Cota" 
                showRowCount="true" 
                noData="Para começar, defina os filtros relevantes."
                tableType="ResponsiveTable"
                enableAutoBinding="false" 
                alignContent="Center"
                class="sapUiResponsiveContentPadding sapUiSmallMargin" 
                initiallyVisibleFields="DT_PROGRAMACAO,CENTRO,COD_VARIEDADE,REGIAO,COMPRADOR,SEMANA,FORNECEDOR,IMOVEL,QTD_COTAS,QTD_CX_COTA"
                wrap="NoWrap"
                >
                <smartTable:layoutData>
                    <FlexItemData growFactor="2" baseSize="0%"/>
                </smartTable:layoutData>
                <Table id="oTable" selectionChange="handleSelectionChange" noDataText="Inicie ou verifique os filtros para exibir os dadaos."
                mode="SingleSelectMaster"/>
            </smartTable:SmartTable>

    </Page>
</mvc:View>
